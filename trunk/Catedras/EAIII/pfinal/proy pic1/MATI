#include<p16f873.inc> 
CBLOCK 0X20
	decremento0
	decremento1
	decremento2
	decremento3
	ENDC
	
	ORG	0x0
	goto	INICIO

INICIO
	bcf	    PORTC,0;
   	bsf		STATUS,RP0;	;Me ubico en el banco 1 de la memoria
	clrf	TRISA;  PUERTO COMO SALIDA
	clrf	TRISB; PUERTO COMO SALIDA
	clrf	TRISC;PUERTO COMO SALIDA
	bcf		STATUS,RP0;  
		


MAIN clrwdt
	bcf	PORTC,0;
	movlw 0x5;
	movwf decremento0;
	movlw 0x10;
	movwf decremento1;
	movlw 0x10;
	movwf decremento2;
	movlw 0x5;
	movwf decremento3;
	
loop0		
	decfsz decremento0,1
	goto loop0
loop1		
	decfsz decremento1,1;
	goto loop1
loop2		
	decfsz decremento2,1;
	goto loop2
loop3		
	decfsz decremento3,1;
	goto loop3

	bsf	    PORTC,0;
	goto	MAIN
	
	END